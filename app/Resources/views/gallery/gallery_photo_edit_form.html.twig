{# A form where an individual photo can be edited or deleted #}
<form  action="#" name="editPhotoForm{{ photo.id }}" data-form-photo_id="{{ photo.id }}">
    <div class="row">
        <div class="small-3 medium-3 large-3 columns  text-center">
                 <img src="{{ asset(photo.path) }}">
        </div>
        <div class="small-5 medium-5 large-5 columns">
            <div class="row">
                Lastet opp: {{ photo.date_added|date('d.m.Y H:m') }}
            </div>
            <div class="row">
                Lastet opp av: {{ photo.user_name }}
            </div>
            <div class="row">
                Kommentar: <input name="comment" type="text" class="photocomment" value="{{ photo.comment }}">
            </div>

            <div class="row">
                Dato tatt: <input name="date" type="text" class="datepicker" value="{{ photo.date_taken|date('d.m.Y') }}">
            </div>
        </div>
        <div class="small-4 medium-4 large-4 columns  text-center">
            <ul class="stack button-group">
                <li><input type="button" value="Slett" class="button small" name="deletePhotoButton" data-delete-photo_id="{{ photo.id }}"></li>
                <li><input type="button" value="Lagre endringer" class="button small" name="savePhotoButton" data-edit-photo_id="{{ photo.id }}"></li>
            </ul>
        </div>
    </div>
</form>